CXX = g++
COMPILE_FLAGS = -O3

sample_program/main: sample_program/main.o sample_program/greet.o sample_program/greet.h
	$(CXX) -o sample_program/main sample_program/main.o sample_program/greet.o

sample_program/main.o: sample_program/main.cpp sample_program/greet.h
	$(CXX) -c -o sample_program/main.o sample_program/main.cpp $(COMPILE_FLAGS)

sample_program/greet.o: sample_program/greet.cpp sample_program/greet.h
	$(CXX) -c -o sample_program/greet.o sample_program/greet.cpp $(COMPILE_FLAGS)
